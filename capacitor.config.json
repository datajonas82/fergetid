{
  "appId": "com.fergetid.ferryapp",
  "appName": "Fergetid",
  "webDir": "dist",
  "ios": {
    "buildOptions": {
      "buildConfiguration": "Release"
    },
    "contentInset": "never",
    "backgroundColor": "#d95cff",
    "webView": {
      "allowsBackForwardNavigationGestures": false,
      "backgroundColor": "#d95cff",
      "opaque": false,
      "scrollEnabled": true,
      "allowsLinkPreview": false,
      "allowsInlineMediaPlayback": true,
      "mediaTypesRequiringUserActionForPlayback": []
    },
    "limitsNavigationsToAppBoundDomains": false,
    "splashScreen": {
      "backgroundColor": "#d95cff",
      "showSpinner": true,
      "spinnerColor": "#ffffff",
      "spinnerStyle": "large"
    }
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#d95cff",
      "showSpinner": true,
      "spinnerColor": "#ffffff",
      "splashFullScreen": true,
      "splashImmersive": true,
      "spinnerStyle": "large",
      "androidSpinnerStyle": "large",
      "iosSpinnerStyle": "large"
    },
    "Geolocation": {
      "permissions": ["location"],
      "ios": {
        "usageDescription": "FergeTid trenger tilgang til din posisjon for å vise nærliggende fergekaier og beregne kjøretid."
      }
    }
  }
}
